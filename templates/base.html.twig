<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>
		{# Thème Bootswatch--Darkly #}
		<link rel="stylesheet" href="https://bootswatch.com/4/darkly/bootstrap.min.css">
		<style>
			nav {
				font-size: 20px;
			}
		</style>
		{% block stylesheets %}{% endblock %}
	</head>
	<body>
		{% block header %}
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
				<a class="navbar-brand" href="#">
					<img src="/images/Logo_GestStock_min.png" alt="GestStock">
				</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item">
							<a class="nav-link" href="{{ path('articles_index') }}">Etat des stocks
								{#Pour l'accessibilité du site#}
								<span class="sr-only">(current)</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('fournisseurs_index') }}">Fournisseurs</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">Contactez-nous</a>
						</li>
					</ul>
					<form class="form-inline my-2 my-lg-0">
						<input class="form-control mr-sm-2" type="text" placeholder="Rechercher">
						<button class="btn btn-secondary my-2 my-sm-0" type="submit">
							<i class="fas fa-search"></i>
						</button>
					</form>
				</div>
			</nav>
		{% endblock %}
		{% block body %}{% endblock %}
		{% block javascripts %}{% endblock %}
		{#JavaScript pour Bootstrap#}
		<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
		{#Font awesome#}
		<script src="https://kit.fontawesome.com/2b12b4bf24.js" crossorigin="anonymous"></script>
	</body>
</html>
