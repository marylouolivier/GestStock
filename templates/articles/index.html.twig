{% extends 'base.html.twig' %}

{% block title %}Etat des stocks
{% endblock %}

{% block stylesheets %}
	<style>
		#Modifier,
		#Add_article {
			color: #000000;
			text-decoration: none;
		}
		h1{
			text-align:center;
		}
		th{
			text-align:center;
		}
	</style>
{% endblock %}

{% block body %}
<div>
	<h1>Etat des stocks</h1>
</div>
	<table class="table table-hover">
		<thead align="center">
			<tr>
				<th scope="col"><h4>Articles</h4></th>
				<th scope="col"><h4>Nom du fournisseur</h4></th>
				<th scope="col"><h4>Quantit√©</h4></th>
			</tr>
		</thead>
		<tbody align="center">
			{% for fournisseur in fournisseurs %}
				{% for article in fournisseur.getArticles() %}
					<tr class="table-dark">
						<td>{{ article.NomArt }}</td>
						<td>{{ fournisseur.NomFour }}</td>
						<td>
							<button type="button" class="btn btn-primary">
								<a href="{{ path('articles_edit', {'id': article.id}) }}">
									<i class="fas fa-pencil-alt" id="Modifier"></i>
								</a>
							</button>
							{{article.QtArt}}
							<button type="button" class="btn btn-primary">
								<a href="{{ path('articles_delete', {'id': article.id}) }}">
									<i class="fas fa-trash" id="Add_article"></i>
								</a>
							</button>
						</td>
					</tr>
				{% endfor %}
			{% endfor %}
		</tbody>
	</table>

	<button type="button" class="btn btn-primary">
		<a href="{{ path('articles_new') }}" id="Add_article">Ajouter un nouvel article</a>
	</button>
{% endblock %}
